{
  "name": "mj-superstars",
  "version": "1.0.0",
  "description": "MJ's Superstars - AI-powered mental health coaching app",
  "private": true,
  "workspaces": [
    "mj-superstars-backend",
    "mj-superstars-frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd mj-superstars-backend && npm run dev",
    "dev:frontend": "cd mj-superstars-frontend && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd mj-superstars-backend && npm run build",
    "build:frontend": "cd mj-superstars-frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd mj-superstars-backend && npm test",
    "test:frontend": "cd mj-superstars-frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd mj-superstars-backend && npm run lint",
    "lint:frontend": "cd mj-superstars-frontend && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/mj-superstars.git"
  },
  "author": "Mike",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  }
}
