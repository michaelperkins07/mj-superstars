# ============================================================
# MJ's Superstars Backend - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mj_superstars

# Redis (optional, for production)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption (32 bytes / 64 hex chars)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Apple Push Notifications
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_KEY_PATH=./certs/AuthKey.p8
APNS_BUNDLE_ID=com.mjsuperstars.app

# Analytics (optional)
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# CORS
CORS_ORIGIN=http://localhost:3000

# Feature Flags (optional)
ENABLE_BUDDY_SYSTEM=true
ENABLE_HEALTHKIT=true
ENABLE_WATCH_APP=true
